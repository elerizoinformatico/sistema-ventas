<div style="width:80%;margin:0 auto;">
  <h2><span class="glyphicon glyphicon-user"></span> Iniciar sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "Correo electrónico" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", style: "width:250px" %>
    </div>

    <div class="field">
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", style: "width:250px" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordar mis datos" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Ingresar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
