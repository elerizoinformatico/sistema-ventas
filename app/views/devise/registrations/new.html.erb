<div class="col-md-3 center-block no-float">
  <h2><span class="glyphicon glyphicon-envelope"></span> Crea tu cuenta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name, "Nombre" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :lastname, "Apellidos" %><br />
      <%= f.text_field :lastname, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :username, "Nombre de usuario" %><br />
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Correo electrónico" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Contraseña" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth, "Fecha de nacimiento" %><br />
      <%= f.date_select :date_of_birth, start_year: 1980, end_year: 2010 %>
    </div>

    <div class="form-group">
      <%= f.label :is_female, "Sexo" %>
      <div><%= f.radio_button :is_female, false %> <%= f.label :is_female, "Masculino" %></div>
      <div><%= f.radio_button :is_female, true %> <%= f.label :is_female, "Femenino" %></div>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Teléfono" %><br />
      <%= f.number_field :phone, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :address, "Dirección" %><br />
      <%= f.text_field :address, autofocus: true, class: "form-control" %>
    </div>
    
    <div class="text-center">
      <%= f.submit "Regístrate", class: "btn btn-info" %>
    </div>
  <% end %>
  <br />
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>

</div>
