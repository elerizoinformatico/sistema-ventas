<div style="width:80%;margin:0 auto;">
	<h1>Detalle de Categoría</h1>
	<div class="table-responsive">
		<table class="table table-hover text-center">
			<thead>
				<tr>
					<th class="text-center">Id</th>
					<th class="text-center">Nombre</th>
					<th class="text-center">Creado</th>
					<th class="text-center">Última vez editado</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= @category.id %></td>
					<td><%= @category.nombre %></td>
					<td><%= @category.created_at.strftime("%d-%b-%Y") %></td>
					<td><%= @category.updated_at.strftime("%d-%b-%Y") %></td>
				</tr>
			</tbody>


				
			
		</table>
	</div>

	<br>

	<%= link_to 'Editar', edit_category_path(@category) %> |
	<%= link_to 'Volver', categories_path %>
</div>