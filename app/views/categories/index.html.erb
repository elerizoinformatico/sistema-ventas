<div style="width:80%;margin:0 auto;">
  <h1>Listando Categorías</h1>

  <table class="table table-hover table-responsive text-center">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.nombre %></td>
          <td><%= link_to 'Mostrar', category, class:"btn btn-info" %></td>
          <td><%= link_to 'Editar', edit_category_path(category), class:"btn btn-info" %></td>
          <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Está seguro?' }, class:"btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Categoría', new_category_path %>
</div>