<div style="width:80%;margin:0 auto;">
  <h1>Listado de Categorías</h1>

  <div class="table-responsive">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th class="text-center">Id</th>
          <th class="text-center">Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.nombre %></td>
            <td><%= link_to 'Mostrar', category, class:"btn btn-default" %></td>
            <td><%= link_to 'Editar', edit_category_path(category), class:"btn btn-default" %></td>
            <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Está seguro?' }, class:"btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'Nueva Categoría', new_category_path, class: "btn btn-default" %>
</div>