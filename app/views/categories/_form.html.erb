<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <p>Existen errores a la hora de guardar:</p> 
  <% end %>

  <div class="field">
    <%= f.label :nombre, "Nombre" %><br>
    <%= f.text_field :nombre, class: "form-control", style: "width:300px" %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-info" %>
  </div>
<% end %>
