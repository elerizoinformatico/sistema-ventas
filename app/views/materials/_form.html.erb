<%= form_for(@material) do |f| %>
  <% if @material.errors.any? %>
    <h4>Debes completar todos los campos:</h4>
    <% @material.errors.full_messages.each do |message| %>
      <div class: "error white">
        * <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :nombre, "Nombre" %><br>
    <%= f.text_field :nombre, class: "form-control", style: "width:250px" %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
