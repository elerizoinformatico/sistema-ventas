<div style="width:80%;margin:0 auto;">
  <h1>Listando Materias Primas</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @materials.each do |material| %>
        <tr>
          <td><%= material.nombre %></td>
          <td><%= link_to 'Mostrar', material %></td>
          <td><%= link_to 'Editar', edit_material_path(material) %></td>
          <td><%= link_to 'Eliminar', material, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Materia Prima', new_material_path %>
</div>