<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <div class="error white">
        * <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :category_id, "Categoría" %><br>
    <%= collection_select( :product, :category_id, Category.all, :id, :nombre, { :multiple => false }, { :class => "form-control", :style => "width:300px" } ) %>
  </div>
  <div class="field">
    <%= f.label :nombre, "Nombre" %><br>
    <%= f.text_field :nombre, class: "form-control", style: "width:300px" %>
  </div>
  <div class="field">
    <%= f.label :descripcion, "Descripción" %><br>
    <%= f.text_field :descripcion, class: "form-control", style: "width:300px" %>
  </div>
  <div class="field">
    <%= f.label :stock, "Stock" %><br>
    <%= f.text_field :stock, class: "form-control", style: "width:300px" %>
  </div>
  <div class="field">
    <%= f.label :precio_compra, "Precio de compra" %><br>
    <%= f.text_field :precio_compra, class: "form-control", style: "width:300px" %>
  </div>
  <div class="field">
    <%= f.label :precio_venta, "Precio de venta" %><br>
    <%= f.text_field :precio_venta, class: "form-control", style: "width:300px" %>
  </div>
  <div class="field">
    <%= f.label :fecha_vencimiento, "Fecha de vencimiento" %><br>
    <%= f.date_select :fecha_vencimiento, start_year: 2017, end_year: 2026, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-info" %>
  </div>
<% end %>
